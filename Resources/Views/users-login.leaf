#set("title") {Авторизация}

#set("body") {
    <h1>Авторизация</h1>
    #if(error) {
        <div>Ошибка имени или пароля</div>
    }
    <form method="POST">
        <div>Имя: <input type="text" name="username" /></div>
        <div>Пароль: <input type="password" name="password"/></div>
        <div><input type="submit" class="btn btn-lg btn-primary" /></div>
    </form>
}

#embed("master")
